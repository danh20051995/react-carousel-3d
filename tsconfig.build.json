{
  "compilerOptions": {
    // Default
    "target": "es5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,

    // Added
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",  
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": ".",
    "sourceMap": false,
    "outDir": "dist",

    // paths config
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "index.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
